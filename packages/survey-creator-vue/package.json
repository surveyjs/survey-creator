{
  "name": "survey-creator-vue",
  "version": "2.0.3",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build-only": "vite build",
    "watch": "vite build --watch",
    "watch:dev": "vite build --mode development --watch",
    "serve:example:dev": "npm run dev --prefix ./example",
    "serve:example:prod": "npm run preview --prefix ./example",
    "build:example:prod": "npm run build --prefix ./example",
    "build": "vite build && npm run build:types",
    "build:dev": "vite build --mode development",
    "build:types": "vue-tsc --project tsconfig.types.json --emitDeclarationOnly",
    "type-check": "vue-tsc --project tsconfig.types.json --noEmit",
    "test": "vitest --no-threads tests/test.spec.ts",
    "test:single": "vitest --no-watch --no-threads tests/test.spec.ts",
    "remove-package-lock": "rimraf package-lock.json",
    "release": "standard-version --message \"Release: %s [azurepipelines skip]\" ",
    "lint": "eslint ./src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "visual-regression-tests:ci": "testcafe --disable-font-subpixel-positioning ../../visualRegressionTests/  --app \"npm run serve:example:prod\" --screenshots ../../ --selector-timeout 1500 --reporter minimal",
    "visual-regression-tests": "testcafe ../../visualRegressionTests/  --app \"npm run serve:example:prod\" --screenshots ../../ --selector-timeout 1500 --config-file .testcaferc.dev.js",
    "testcafe:ci": "testcafe ../../functionalTests/ --app \"npm run serve:example:prod\" --selector-timeout 1500 --reporter minimal",
    "testcafe": "testcafe ../../functionalTests/ --app \"npm run serve:example:prod\" --selector-timeout 1500 --config-file .testcaferc.dev.js"
  },
  "devDependencies": {
    "@babel/types": "^7.20.2",
    "@rushstack/eslint-patch": "^1.1.4",
    "@tsconfig/node16": "^16.1.3",
    "@types/node": "^16.11.68",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "2.4.4",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.22.0",
    "eslint-plugin-vue": "^9.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "survey-core": "../../../survey-library/packages/survey-core/build",
    "survey-vue3-ui": "../../../survey-library/packages/survey-vue3-ui/build",
    "survey-creator-core": "../survey-creator-core/build",
    "standard-version": "^9.5.0",
    "typescript": "^5.7.0",
    "vite": "^4.5.9",
    "vitest": "~0.32.4",
    "rimraf": "2.5.4",
    "vue": "3.4.19",
    "vue-tsc": "^2.2.0"
  }
}
